{
  "type": "KerasRNN",
  "build_params": {
    "batch_size": 64,
    "hidden_size": 128,
    "stateful": true
  },
  "fit_params": {
    "timesteps": 256,
    "validation_size": 0.1,
    "verbose": 1,
    "num_epochs": 100,
    "early_stopping" : {
      "monitor": "val_auc_roc",
      "min_delta": 0.0001,
      "patience": 20,
      "mode": "max"
    },
    "shuffle": true,
    "optimizer": "adam",
    "learning_rate": 0.0001,
    "weighted": true
  },
  "input_params": {
    "features": [
      {
        "type": "ProteinBorderTransformer"
      },
      {
        "type": "Pfam2VecTransformer",
        "vector_path": "#{PFAM2VEC}"
      }
    ]
  }
}


